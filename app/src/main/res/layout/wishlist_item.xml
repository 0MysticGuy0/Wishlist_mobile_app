<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_marginHorizontal="4dp"
    >

    <LinearLayout
        android:id="@+id/wishlist_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/wishlist_ico"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/img" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="4dp"
            android:layout_marginVertical="2dp"
            android:src="@color/darkGray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_listDate" />

        <TextView
            android:id="@+id/wishlist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Супер список"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/wishlist_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="00.00.0000" />
    </LinearLayout>
</androidx.cardview.widget.CardView>